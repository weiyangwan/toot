<% if user_signed_in? %>
  <%= render 'users/show' %>
<% else %>

  <div class="home">

    <div class="row">
      <div class="container header col-md-7">
        <h1 class="homeHeader">Toot is the liveliest community for your travel conversations.</h1>
        <h2 class="homeSubheader">Some nice sub-header here.</h2>
      </div>


      <div class="container col-md-4">
        <li><%= link_to "Be a Tooter | Sign Up Now", new_user_registration_path, class: "btn btn-primary homeBtn" %></li>
        <li><%= link_to "Log In", new_user_session_path, class: "btn btn-primary homeBtn" %></li>
      </div>

    </div>

  </div>

<% end %>
